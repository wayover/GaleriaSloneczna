<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KinoActivity">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/multikino" />

    <Button
        android:id="@+id/bRepertuar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Repertuar"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/bCennik"
        app:layout_constraintStart_toStartOf="@+id/bCennik"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <Button
        android:id="@+id/bCennik"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Cennik"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/bKinoKontakt"
        app:layout_constraintStart_toStartOf="@+id/bKinoKontakt"
        app:layout_constraintTop_toBottomOf="@+id/bRepertuar" />

    <Button
        android:id="@+id/bKinoKontakt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Kontakt"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/bStronaGlw"
        app:layout_constraintStart_toStartOf="@+id/bStronaGlw"
        app:layout_constraintTop_toBottomOf="@+id/bCennik" />

    <Button
        android:id="@+id/bStronaGlw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Strona Główna"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bKinoKontakt" />
</androidx.constraintlayout.widget.ConstraintLayout>